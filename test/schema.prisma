model PricingPlan {
  id                   Int            @id @default(autoincrement())
  planType             String
  planName             String
  description          String?
  basePrice            Float
  creditsIncluded      Float
  createdAt            DateTime       @default(now())
  
  products             Product[]
  meteredUsages        MeteredUsage[]
}

model Product {
  id                   Int            @id @default(autoincrement())
  name                 String
  price                Float
  planId               Int
  plan                 PricingPlan    @relation(fields: [planId], references: [id])
}

model MeteredUsage {
  id                   Int            @id @default(autoincrement())
  service              String
  unit                 String
  credits              Float
  planId               Int
  plan                 PricingPlan    @relation(fields: [planId], references: [id])
}